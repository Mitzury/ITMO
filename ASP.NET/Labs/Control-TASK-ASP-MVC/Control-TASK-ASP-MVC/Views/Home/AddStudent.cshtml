@model Control_TASK_ASP_MVC.Models.Student

@{
    ViewBag.Title = "Добавление студента";
}

<h2>VIEW-AddStudent</h2>


<h3>Существующий список</h3>
<table class="table">
    <tr>
        <td><p>Имя</p></td>
        <td> <p>Фамилия    </p></td>
        <td> <p>Возраст    </p></td>
        <td><p>Группа     </p></td>
        <td><p>Курс       </p></td>
        <td><p>Оценка     </p></td>

    </tr> @foreach (var c in ViewBag.Students)
    {
        <tr>
            <td><p>@c.FirstName</p></td>
            <td><p>@c.LastName</p></td>
            <td><p>@c.Age</p></td>
            <td><p>@c.Group</p></td>
            <td><p>@c.Course</p></td>
            <td><p>@c.Mark</p></td>
        </tr>
    }
</table>
<h3>Форма ввода нового студента</h3>
<form method="post" action="">
    <table>
        <tr>
            <td><p>Введите свое имя </p></td>
            <td><input type="text" name="FirstName" /> </td>
        </tr>
        <tr>
            <td><p>Введите свою фамилию </p></td>
            <td><input type="text" name="LastName" /> </td>
        </tr>
        <tr>
            <td><p>Введите свой возраст </p></td>
            <td><input type="text" name="Age" /> </td>
        </tr>
        <tr>
            <td><p>Введите свою группу </p></td>
            <td><input type="text" name="Group" /> </td>
        </tr>
        <tr>
            <td><p>Введите свой курс </p></td>
            <td><input type="text" name="Course" /> </td>
        </tr>
        <tr>
            <td><p>Введите свою оценку </p></td>
            <td><input type="text" name="Mark" /> </td>
        </tr>
        <tr><td><input type="submit" value="Отправить" /> </td><td></td></tr>
    </table>
</form>
